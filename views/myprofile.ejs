<!doctype html>
<html lang="en">

<%- include partials/header -%>
<%- include partials/navBar -%>

<body class="text-center">
    <div class="signup-form" align-items="top">
    
        <form action="/myprofile" method="POST">
            <div class="mb-4" id="profile-photo">
                <div class="profileImageLink">
                    <% if(user.profilePicture == null){ %>
                        <i class="fas fa-user"></i>
                    <% } else {  %>
                        <img src="<%=user.profilePicture%>"></i>
                    <% } %>
                </div>   
            </div>
            <h2><%= user.fname %> <%=user.lname%></h2>
            <p class="hint-text"><%=user.aboutme%></p>
            <div class="form-group">
                <input type="hidden" class="form-control input-lg" name="username" placeholder="<%=user.username%>">
            </div>
            
            <div class="or-seperator"><b><img class="xSmall" src="css/images/XLogo2.png" width="100%" height="60%">
            </b></div>
            
            <!-- First Name -->
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="fname" placeholder="First Name" value="<%=user.fname%>">
            </div>

            <!-- Last Name -->
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="lname" placeholder="Last Name" value="<%=user.lname%>">
            </div>

            <!-- Email -->
            <div class="form-group">
                <input type="email" class="form-control input-lg" name="email" placeholder="Email" value="<%=user.email%>">
            </div>

            <!-- Headline -->
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="aboutme" placeholder="Profile Headline" value="<%=user.aboutme%>">
            </div>

            <!-- Major -->
            <div class="form-group">
                <!-- <label for="major">School Major</label> -->
                <input type="text" class="form-control input-lg" name="major" placeholder="School Major" value="<%=user.major%>">
            </div>

            <!-- School Year -->
            <div class="form-group">
                <!-- <label for="schoolyear">School Year</label> -->
                <select class="form-control" id="schoolyear" value=",%user.schoolyear%">
                  <option>Select School Year</option>
                  <option>Freshmen</option>
                  <option>Sophomore</option>
                  <option>Junior</option>
                  <option>Senior / 5th Year</option>
                </select>
              </div>


            <!-- Mentee/Mentor -->
            <h6>Enrollment</h6>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="enrollment" value="<%=user.enrollment%>">
                <label class="form-check-label" for="inlineRadio1">Mentee</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="enrollment" value="%=user.enrollment%">
                <label class="form-check-label" for="inlineRadio2">Mentor</label>
            </div>

            <hr></hr>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Update</button>
            </div>
            
            <!-- Need to change font color -->
            <div class="form-group">
                <a class="btn btn-success btn-lg btn-block signup-btn" href="/launch">Save & Go Home</a>
            </div>
    
        </form>
    </div>

</body>


</html>

