<!doctype html>
<html lang="en">

<%- include partials/header -%>
<%- include partials/navBar -%>

<body class="text-center">
    <div class="signup-form" align-items="top">
    
        <form action="/myprofile" method="POST">
            <div class="mb-4" id="profile-photo">
                <div class="profileImageLink">
                    <% if(user.profilePicture == null){ %>
                        <i class="fas fa-user"></i>
                    <% } else {  %>
                        <img src="<%=user.profilePicture%>"></i>
                    <% } %>
                </div>   
            </div>
            <h2><%= user.fname %> <%=user.lname%></h2>
            <p class="hint-text"><%=user.aboutme%></p>
            <div class="form-group">
                <input type="hidden" class="form-control input-lg" name="username" placeholder="<%=user.username%>">
            </div>
            
            <div class="or-seperator"><b><img class="xSmall" src="css/images/XLogo2.png" width="100%" height="60%">
            </b></div>
    
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="fname" placeholder="<%=user.fname%>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="lname" placeholder="<%=user.lname%>">
            </div>
            <div class="form-group">
                <input type="email" class="form-control input-lg" name="email" placeholder="<%=user.email%>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="aboutme" placeholder="<%=user.aboutme%>">
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Update</button>
            </div>
    
        </form>
    </div>

</body>


</html>

